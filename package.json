{
  "name": "iobroker.hoymiles-ms",
  "version": "0.2.0",
  "description": "This adapter integrates Hoymiles MS-A2 into ioBroker.",
  "author": {
    "name": "mcm1957",
    "email": "mcm57@gmx.at"
  },
  "homepage": "https://github.com/mcm4iob/ioBroker.hoymiles-ms",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "hoymiles",
    "hoymiles ms a2",
    "microstorage",
    "hoymiles akku"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcm4iob/ioBroker.hoymiles-ms.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "mqtt-connection": "^4.1.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.1.0",
    "@iobroker/testing": "^5.1.1",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.5.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "i18n/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "xxbuild": "build-adapter ts",
    "xxwatch": "build-adapter ts --watch",
    "build": "tsc -p tsconfig.build.json ",
    "watch": "tsc -p tsconfig.build.json --watch ",
    "prebuild:ts": "rimraf build",
    "xxbuild:ts": "build-adapter ts",
    "xxwatch:ts": "build-adapter ts --watch",
    "build:ts": "tsc -p tsconfig.build.json ",
    "watch:ts": "tsc -p tsconfig.build.json --watch ",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/mcm4iob/ioBroker.hoymiles-ms/issues"
  },
  "readmeFilename": "README.md"
}
